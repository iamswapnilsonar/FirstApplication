<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Sherlock.__Theme" parent="@android:style/Theme.Holo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="Sherlock.__Theme.Light" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light" />
    <style name="ButtonHoloColors" parent="@android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/holocolors_btn_default_holo_dark</item>
    </style>
    <style name="ImageButtonHoloColors" parent="@android:style/Widget.Holo.ImageButton">
        <item name="android:background">@drawable/holocolors_btn_default_holo_dark</item>
    </style>
    <style name="HoloColors" parent="@style/Theme.Actionbar">
        <item name="android:buttonStyle">@style/ButtonHoloColors</item>
        <item name="android:imageButtonStyle">@style/ImageButtonHoloColors</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/holocolors_btn_radio_holo_dark</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/holocolors_btn_check_holo_dark</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/holocolors_list_selector_holo_dark</item>
        <item name="android:activatedBackgroundIndicator">@drawable/holocolors_activated_background_holo_dark</item>
        <item name="android:fastScrollThumbDrawable">@drawable/holocolors_fastscroll_thumb_holo</item>
    </style>
    <style name="HoloColors_Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:buttonStyle">@style/ButtonHoloColors</item>
        <item name="android:imageButtonStyle">@style/ImageButtonHoloColors</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/holocolors_btn_radio_holo_dark</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/holocolors_btn_check_holo_dark</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/holocolors_list_selector_holo_dark</item>
        <item name="android:activatedBackgroundIndicator">@drawable/holocolors_activated_background_holo_dark</item>
        <item name="android:fastScrollThumbDrawable">@drawable/holocolors_fastscroll_thumb_holo</item>
    </style>
</resources>
