<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/frame"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background_cardmenu">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/holocolors_list_selector_holo_dark"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@id/Title_Layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.0"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12.0dip">

                <ImageView
                    android:id="@id/ib_0"
                    android:layout_width="32.0dip"
                    android:layout_height="32.0dip"
                    android:src="@drawable/ic_quotes" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="right|clip_vertical"
                android:orientation="vertical"
                android:paddingBottom="8.0dip"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:paddingTop="4.0dip">

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@id/tv_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearance"
                    android:textColor="@color/font_color2"
                    android:typeface="normal"
                    app:typeface="roboto_light" />

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@id/tv_subtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/font_color3"
                    android:textSize="12.0sp"
                    app:typeface="roboto_regular" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>