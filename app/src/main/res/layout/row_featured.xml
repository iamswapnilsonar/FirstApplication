<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/frame"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background_cardmenu">

        <LinearLayout
            android:id="@id/pannel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_cardmenu"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@id/Color_Top"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@id/iv_logosmall"
                    android:layout_width="48.0dip"
                    android:layout_height="48.0dip"
                    android:layout_weight="0.0"
                    android:contentDescription="@string/app_name2"
                    android:paddingBottom="8.0dip"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingTop="8.0dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_quotes" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="4.0dip"
                    android:paddingTop="4.0dip">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:textAppearance="?android:textAppearanceMediumInverse"
                        android:textColor="@color/font_color0"
                        app:typeface="roboto_light" />

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@id/tv_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:singleLine="true"
                        android:textAppearance="?android:textAppearanceSmallInverse"
                        android:textColor="@color/font_color1"
                        app:typeface="roboto_medium" />
                </LinearLayout>

                <com.devspark.robototextview.widget.RobotoButton
                    android:id="@id/ib_more"
                    android:layout_width="wrap_content"
                    android:layout_height="48.0dip"
                    android:layout_weight="0.0"
                    android:background="@drawable/holocolors_list_selector_holo_dark"
                    android:paddingLeft="16.0dip"
                    android:paddingRight="16.0dip"
                    android:text="@string/Action_Mas"
                    android:textAppearance="?android:textAppearance"
                    android:textColor="@color/font_color0"
                    app:typeface="roboto_regular" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/tv_quote1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8.0dip"
                        android:paddingLeft="12.0dip"
                        android:paddingRight="12.0dip"
                        android:paddingTop="8.0dip"
                        android:textAppearance="?android:textAppearance"
                        android:textColor="@color/font_color3"
                        app:typeface="roboto_light" />

                    <LinearLayout
                        android:id="@id/q2_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <View
                            android:id="@id/View01"
                            android:layout_width="fill_parent"
                            android:layout_height="2.0dip"
                            android:background="@drawable/scringo_dash_line" />

                        <com.devspark.robototextview.widget.RobotoTextView
                            android:id="@id/tv_quote2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12.0dip"
                            android:paddingLeft="12.0dip"
                            android:paddingRight="12.0dip"
                            android:paddingTop="8.0dip"
                            android:textAppearance="?android:textAppearance"
                            android:textColor="@color/font_color3"
                            app:typeface="roboto_light" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>